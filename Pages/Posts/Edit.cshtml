@page
@model SocialNetwork.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.postID" />
            <div class="form-group">
                <label asp-for="Post.name" class="control-label"></label>
                <input asp-for="Post.name" class="form-control" />
                <span asp-validation-for="Post.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.stringContent" class="control-label"></label>
                <input asp-for="Post.stringContent" class="form-control" />
                <span asp-validation-for="Post.stringContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.date" class="control-label"></label>
                <input asp-for="Post.date" class="form-control" />
                <span asp-validation-for="Post.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.base64Photo" class="control-label"></label>
                <input asp-for="Post.base64Photo" class="form-control" />
                <span asp-validation-for="Post.base64Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.posX" class="control-label"></label>
                <input asp-for="Post.posX" class="form-control" />
                <span asp-validation-for="Post.posX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.posY" class="control-label"></label>
                <input asp-for="Post.posY" class="form-control" />
                <span asp-validation-for="Post.posY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.userID" class="control-label"></label>
                <select asp-for="Post.userID" class="form-control" asp-items="ViewBag.userID"></select>
                <span asp-validation-for="Post.userID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
