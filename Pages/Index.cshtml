@using Microsoft.AspNetCore.Identity
@using SocialNetwork.Models;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model IndexModel
@{
    ViewData["Title"] = "Social Network";
    if (Model.newMessages == true)
