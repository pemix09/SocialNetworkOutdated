@page
@model SocialNetwork.Areas.Identity.Pages.Accounts.LogOutModel

@{
    ViewData["Title"] = "Wyloguj się";
}

<header>
    @{
        if (User.Identity.IsAuthenticated)
        {
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Kliknij tutaj, jeśli napewno chcesz się wylogować</button>
            <a asp-page="/Index">Anuluj</a>
        </form>
            
        }
        else
        {
            <p>Właśnie zostałeś wylogowany z aplikacji!</p>
        }
    }
</header>