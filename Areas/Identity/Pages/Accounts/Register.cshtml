@page
@model SocialNetwork.Areas.Identity.Pages.Accounts.RegisterModel
@{
}

@{
    ViewData["Title"] = "Zarejestruj się";
}
<head>
    <title>Zarejestruj się</title>
</head>

<div class="welcomePage">
    <div style="margin:150px; display: flex; flex-direction: column; align-items: center; justify-content: space-between;  gap: 10px;">
        <button class="PictureButton" type="submit" form="RegisterPost">
            <svg xmlns="http://www.w3.org/2000/svg" width="170" viewBox="0 0 24 24"><path d="M21 14.874v-1.814h-3.25c-.745 0-1.128-.26-1.451-.706l-1.709-2.302-2.791 3.024 1.509 2.149c.478.753.514 1.267.514 1.952v5.823h-2.699v-5.474c-.021-1.512-2.455-2.945-3.303-1.723l-1.617 2.281c-.359.51-.971.686-1.565.686h-4.638v-2.621l3.483-.003c.544 0 1.017-.193 1.274-.806l1.549-3.782c.269-.563.632-1.076 1.076-1.515l3.609-3.573-1.02-.891c-.306-.267-.716-.381-1.116-.311l-2.999.525-.471-2.201 4.115-.784c.771-.147 1.433.103 2.009.636l3.961 3.656c.628.57 1.272 1.563 2.276 3.047.184.272.443.656 1.053.656h2.201v-1.85l3 2.96-3 2.961zm-3.101-8.747c1.403-.268 2.323-1.623 2.055-3.026-.269-1.403-1.624-2.323-3.026-2.055-1.403.269-2.323 1.624-2.055 3.026.268 1.404 1.623 2.324 3.026 2.055z" /></svg>
            <h1 style="white-space:nowrap">@ViewData["Title"]</h1>
        </button>
    </div>
    
    <div class="col-md-7">
        <hi>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</hi>
       
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="RegisterPost" class="flex-column" style="justify-content:flex-start">
            <hr />
            <div class="RowFlex" >
                <div class="form-group" style="width:400px" >
                    <label asp-for="@Model.Input.Email"></label>
                    <input asp-for="@Model.Input.Email" class="form-control" />
                    <span asp-validation-for="@Model.Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:400px;">
                    <label asp-for="@Model.Input.confirmEmail"></label>
                    <input asp-for="@Model.Input.confirmEmail" class="form-control" />
                    <span asp-validation-for="@Model.Input.confirmEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="RowFlex">
                <div class="form-group" style="width:400px">
                    <label asp-for="@Model.Input.phone"></label>
                    <input asp-for="@Model.Input.phone" class="form-control" />
                    <span asp-validation-for="@Model.Input.phone" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:400px">
                    <label asp-for="@Model.Input.nickname"></label>
                    <input asp-for="@Model.Input.nickname" class="form-control" />
                    <span asp-validation-for="@Model.Input.nickname" class="text-danger"></span>
                </div>
            </div>
            <div class="RowFlex">
                <div class="form-group" style="width:400px">
                    <label asp-for="@Model.Input.firstName"></label>
                    <input asp-for="@Model.Input.firstName" class="form-control" />
                    <span asp-validation-for="@Model.Input.firstName" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:400px">
                    <label asp-for="@Model.Input.lastName"></label>
                    <input asp-for="@Model.Input.lastName" class="form-control" />
                    <span asp-validation-for="@Model.Input.lastName" class="text-danger"></span>
                </div>
            </div>
            <div class="RowFlex">
                <div class="form-group" style="width:400px">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" style="width:400px">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

        </form>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
