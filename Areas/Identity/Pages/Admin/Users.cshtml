@page
@model SocialNetwork.Areas.Identity.Pages.Admin.UsersModel
@{
}

<section class="welcomePageAdmin">
    <div class="m-2">

        <table style="color:white;" class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Pseudonim</th>
                    <th>Adres email</th>
                    <th>Role</th>
                    <th />
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.firstName</td>
                        <td>@user.lastName</td>
                        <td>@user.nickname</td>
                        <td>@user.email</td>
                        <td>
                            <a asp-page="Claims" asp-route-id ="@user.ID" asp-route-stringID="@user.stringID">Zarządzaj rolami</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
